{
  "name": "create-app",
  "version": "1.0.0",
  "description": "A boilerplate",
  "scripts": {
    "dev": "cd client && npm start & cd server && npm run dev",
    "start": "cd server && npm run start & cd client && npm start",
    "start:server": "cd server && node index.js",
    "clean": "rm dist/bundle.js",
    "build-dev": "webpack --mode development",
    "build": "webpack --mode production",
    "deploy": "flyctl deploy",
    "logs:prod": "flyctl logs",
    "lint": "cd eslint .",
    "test:backend": "cd server && npm run test",
    "test:frontend": "cd client && npm run test",
    "test:e2e": "cd client && cypress run",
    "test:integration": "cd server && npm run start:test & cd client && npm run start & cd client && npm run test:e2e"
  },
  "author": "David Andrea",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.3.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "dotenv": "^8.2.0",
    "fibers": "^4.0.2",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "client/*",
      "server/*"
    ]
  }

}
